/* basics/ClickEvent.css */

.click-event-container {
  text-align: center;
  margin-top: 20px;
}

.click-button {
  background-color: #007bff;
  color: white;
  border: none;
  font-size: 16px;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.click-button:hover {
  background-color: #0056b3;
}

.message {
  margin-top: 15px;
  font-size: 18px;
  color: #28a745;
  font-weight: bold;
}

// basics/ClickEvent.js
import React, { useState } from 'react';
import './ClickEvent.css'; // Import CSS file for styling

const ClickEvent = () => {
  const [message, setMessage] = useState('');

  const handleClick = () => {
    // You can use alert or change the message using state
    // alert('Button clicked!');
    setMessage('Button was clicked!');
  };

  return (
    <div className="click-event-container">
      <button className="click-button" onClick={handleClick}>Click Me</button>
      {message && <p className="message">{message}</p>}
    </div>
  );
};

export default ClickEvent;
